{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Direct from VS Code",
            "type": "shell",
            "command": "call \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\" && cl.exe /Zi /EHsc /nologo /Fo\"${fileDirname}\\bin\\${fileBasenameNoExtension}.obj\" /Fe\"${fileDirname}\\bin\\${fileBasenameNoExtension}.exe\" \"${file}\"",
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Calls vcvars64.bat then cl.exe so you can run without opening from the Developer Command Prompt."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Ox", // dsiable to prevent "optimized away"
                "/Ob3",
                "/Oi",
                "/GF",
                "/Gy",
                "/GL",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/link",
                "/LTCG",
                "/INCREMENTAL:NO",
                "/OPT:REF",
                "/OPT:ICF",
                "/DEBUG"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}